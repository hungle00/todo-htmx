<div class="todo">
  <input type="hidden" name="id" value={"#{@todo.id}"}/>
  <button class="icon-button" disabled>❌</button>
  <button class="icon-button" disabled>📝</button>
  <span class="note"><%= @todo.note %></span>
  <form hx-patch={"/todos/#{@todo.id}"} hx-target="closest div" hx-swap="outerHTML" class="update-todo">
    <input type="text" name="note" value={"#{@todo.note}"} >
    <button type="submit">Save</button>
    <button hx-get={"/todos/#{@todo.id}"}>Cancel</button>
  </form>
</div>
